apiVersion: v1
kind: Service
metadata:
  name: ml1-marklogic-headless
  namespace: default
spec:
  ports:
    - name: health-check
      protocol: TCP
      port: 7997
      targetPort: 7997
    - name: xdqp-port1
      protocol: TCP
      port: 7998
      targetPort: 7998
    - name: xdqp-port2
      protocol: TCP
      port: 7999
      targetPort: 7999
    - name: app-services
      protocol: TCP
      port: 8000
      targetPort: 8000
    - name: admin
      protocol: TCP
      port: 8001
      targetPort: 8001
    - name: manage
      protocol: TCP
      port: 8002
      targetPort: 8002
    - name: jppf1
      protocol: TCP
      port: 11111
      targetPort: 11111
    - name: jppf2
      protocol: TCP
      port: 11443
      targetPort: 11443
    - name: jppf3
      protocol: TCP
      port: 11199
      targetPort: 11199
    - name: qa-lb3
      protocol: TCP
      port: 12001
      targetPort: 12001
  selector:
    app.kubernetes.io/name: marklogic
  type: ClusterIP